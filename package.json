{
  "name": "@besin-denetle/root",
  "version": "0.7.0",
  "private": true,
  "description": "Besin Denetle - Monorepo with mobile app and backend",
  "scripts": {
    "install:all": "pnpm install",
    "clean": "npx rimraf node_modules **/node_modules",
    "backend": "pnpm --filter @besin-denetle/backend start",
    "mobile": "pnpm --filter @besin-denetle/mobile start",
    "mobile:prebuild": "pnpm --filter @besin-denetle/mobile exec npx expo prebuild",
    "clean:build": "npx rimraf **/dist **/.turbo **/.expo **/android **/ios"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
